<div class="banner">
  <div class="banner-content">
    <h1>Cocktails</h1>
  </div>
</div>

<div class="add-drink">
 <%= link_to 'Add a new cocktail', new_cocktail_path %>
</div>

<div class="cocktail-list">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 text-center">
        <div class="grey-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
          url('<%= cl_image_path (cocktail.photo? ? cocktail.photo.path : "oldf_wisr76"), height: 300, width: 600, crop: :fill %>')">
          <div class="grey-card-content">
            <h3><%= cocktail.name %></h3>
            <p>------------------</p>
          </div>
        <%= link_to "", cocktail, class: "card-link hvr-bounce-to-right" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
