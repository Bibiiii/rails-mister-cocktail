<p id="notice"><%= notice %></p>

<div class="cocktail-banner">
  <h1>
    <%= @cocktail.name %>
  </h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-xs-6">
      <div class="list">
        <h3>Ingredients:</h3>
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li> <%= dose.description %> <%= dose.ingredient.name %> </li>
            <%= link_to dose_path(dose), method: :delete do %>
              <i class="fa fa-trash"></i> Destroy
            <% end %>
          <% end %>
        </ul>

        <h2>Add an ingredient</h2>
        <%= simple_form_for [ @cocktail, @dose ] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient, collection: Ingredient.all %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>

        <%= link_to 'Delete cocktail', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %> |
        <%= link_to 'Back', cocktails_path %>
      </div>
    </div>
  </div>
</div>

