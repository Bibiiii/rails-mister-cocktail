<div class="banner">
  <div class="banner-content">
    <h1>Edit cocktail</h1>
  </div>
</div>

<div class="container">

  <div class="col-md-offset-3 col-md-6">
    <div class="add-form">
    <h2>Edit cocktail</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="form-group">
          <%= f.input :description, input_html: { placeholder: "description" } %>
        </div>
        <div class="form-group">
          <%= f.input :ingredient_id, collection: Ingredient.all.order('name ASC'), include_blank:  "Select a category" %>
        </div>
        <div class="form-actions">
          <%= f.submit class: "btn btn-bib" %>
        </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
